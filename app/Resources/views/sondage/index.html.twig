{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste des sondages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sondage in sondages %}
            <tr>
                <td><a href="{{ path('sondage_show', { 'id': sondage.id }) }}">{{ sondage.id }}</a></td>
                <td>{{ sondage.question }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sondage_show', { 'id': sondage.id }) }}">Regarder</a>
                        </li>
                        <li>
                            <a href="{{ path('sondage_edit', { 'id': sondage.id }) }}">Editer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sondage_new') }}">Cr√©er un nouveau sondage</a>
        </li>
    </ul>
{% endblock %}
