{% extends 'base.html.twig' %}

{% block body %}
    <h1>Message</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Texte</th>
                <td>{{ message.text }}</td>
            </tr>
            <tr>
                <th>Date du message</th>
                <td>{% if message.dateMessage %}{{ message.dateMessage|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('message_index') }}">Retour Ã  la liste</a>
        </li>
        <li>
            <a href="{{ path('message_edit', { 'id': message.id }) }}">Editer</a>
        </li>

    </ul>
{% endblock %}
