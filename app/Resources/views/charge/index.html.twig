{% extends 'base.html.twig' %}

{% block body %}
    <h1>Charges list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Montant</th>
                <th>Dateecheance</th>
                <th>Statut</th>
                <th>Piecejointe</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for charge in charges %}
            <tr>
                <td><a href="{{ path('charge_proprietaire_show', { 'id': charge.id }) }}">{{ charge.id }}</a></td>
                <td>{{ charge.titre }}</td>
                <td>{{ charge.montant }}</td>
                <td>{% if charge.dateEcheance %}{{ charge.dateEcheance|date('Y-m-d') }}{% endif %}</td>
                <td>{{ charge.statut }}</td>
                <td>{{ charge.pieceJointe }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('charge_proprietaire_show', { 'id': charge.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('charge_edit', { 'id': charge.id }) }}">edit</a>
                        </li>
                        <li>
                            <a href="{{ path('charge_delete', { 'id': charge.id }) }}">delete</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
