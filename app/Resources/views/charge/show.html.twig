{% extends 'base.html.twig' %}

{% block body %}
    <h1>Charge</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ charge.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ charge.titre }}</td>
            </tr>
            <tr>
                <th>Montant</th>
                <td>{{ charge.montant }}</td>
            </tr>
            <tr>
                <th>Dateecheance</th>
                <td>{% if charge.dateEcheance %}{{ charge.dateEcheance|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ charge.statut }}</td>
            </tr>
            <tr>
                <th>Piecejointe</th>
                <td>{{ charge.pieceJointe }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('charge_edit', { 'id': charge.id }) }}">Edit</a>
        </li>
        <li>
            <a href="{{ path('charge_delete', { 'id': charge.id }) }}">Delete</a>
        </li>
    </ul>
{% endblock %}
