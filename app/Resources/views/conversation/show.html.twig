{% extends 'base.html.twig' %}

{% block body %}
    <h1>Conversation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ conversation.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ conversation.titre }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('conversation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('conversation_edit', { 'id': conversation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
